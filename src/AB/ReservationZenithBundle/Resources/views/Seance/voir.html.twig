{% extends "ABReservationZenithBundle::layout.html.twig" %}

{% block title %}ABReservationZenithBundle:Seance:voir{% endblock %}

{% block body %}
<div class='well'>
	<h3>Voir une séance</h3>
		{% for seance in seances %}
		<table>
			<tr>
				<td>Heure:</td>
				<td>{{ seance.heure|date('H:i')}}</td>			
			</tr>
			<tr>
				<td>Date:</td>
				<td>{{ seance.date|date('d/m/Y') }}</td>			
			</tr>
			<tr>
				<td>Nombre de Places Restantes:</td>
				<td>{{ seance.nombrePlacesRestantes }}</td>			
			</tr>
			<tr>
				<td>Spectacle:</td>
				<td>{{ seance.spectacle }}</td>			
			</tr>		
			<tr>
				<td><a href="{{path('modifier_seance',{'id':seance.id})}}">modifier</a></td>
				<td><a href="{{path('voir_seance',{'id':seance.id})}}">Détails</a></td>
				<td><a href="{{path('supprimer_seance',{'id':seance.id})}}">supprimer</a></td>
			</tr>
		</table>
</div>
	{% endfor %}
	
{% endblock %}
