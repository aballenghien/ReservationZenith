{% extends "ABReservationZenithBundle::layout.html.twig" %}
{% block title %}{{'pages.accueilzenith'|trans}}{% endblock %}

{% block body %}
{{ parent () }}
<div class='container' style="text-align:center">
    <img src="{{asset('image/img.jpg')}}" width="500" alt="zenith"/>
</div>
<h3>{{'pages.accueilzenith'|trans}}</h3>

<p>{{channel.title}} <a href="{{asset('fluxrss.rss')}}">{{'fluxrss'|trans}}</a></p>
<p>{{channel.description}}</p>

    {% for item in items %}
    <div class='well'>
    	   
            <table>
                <div>
                    <tr>
            			<td width='50%'><div><font size=5><a href="{{item.source}}">{{item.title}}</div></a></font></td>
                        <td align='center' rowspan='3'><div><img src="{{item.image.url}}" width="50%" height="50%" style="border: 4px solid black;-webkit-border-radius: 30px;"/></div> </td>
                    </tr>
                    <tr>
            			<td><div>{{item.description}}</div></td>
                    </tr>
	
        		</div>
            </table>
        
    </div>
    {% endfor %}



<div class='col-md-2'>
    <img src="{{asset ('image/zenith.jpg')}}"/>
</div>

<div class='col-md-6'>
    <h4>{{'base.presentation'|trans}}</h4>
    <div clas='lead text-justifiy'>
        <p>{{'base.zenith1'|trans}},{{'base.zenith2'|trans}} ,{{'base.zenith3'|trans}}</p>
        <p>{{'base.zenith4'|trans}},{{'base.chanson'|trans}},{{'base.rock'|trans}}, {{'base.rap'|trans}}, {{'base.musiqueMonde'|trans}}, {{'base.comedie'|trans}}, {{'base.show'|trans}}, {{'base.etc'|trans}},{{'base.conditions'|trans}}</p>
    </div>  
</div>
                    
<div class='col-md-offset-1'></div>
	<div class='col-md-3'>
        <h4>{{'base.contact'|trans}}</h4>
        <p>Zénith de Nantes</p>
        <p>Boulevard du Zénith</p>
        <p>44800 Saint-Herblain</p>
        <p><a href="mailto:Bien@Essaye.Sauron">Bien@Essaye.Sauron</a></p>
     </div>
{% endblock %}