	<tr><td>{{form_label(form.seance)}}</td><td>{{form_widget(form.seance)}}</td></tr>
	<tr><td>{{form_label(form.tarif)}}</td><td>{{form_widget(form.tarif)}}</td></tr>
	</table>
	<div hidden="true">
	{{form_rest(form)}}
	</div>
		<br>
		<input type="submit" class='btn btn-primary' />
	</form>
	{% else %}
		<h1>{{'privilege.reservation'|trans}}</h1>
	{% endif %}
</div>
{% endblock %}
