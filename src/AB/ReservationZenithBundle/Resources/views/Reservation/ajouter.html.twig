{% block body %}
{{ parent () }}
<h3>{{'ajouter.reservation'|trans}}</h3>
<div class='well'>
	<br>
	{% if is_granted('ROLE_USER') %}
	<form action="{{path('ajouter_reservation')}}" method="post" {{form_enctype(form)}}>
		<table>
	<tr><td>{{form_label(form.nom)}}</td><td>{{form_widget(form.nom)}}</td></tr>
