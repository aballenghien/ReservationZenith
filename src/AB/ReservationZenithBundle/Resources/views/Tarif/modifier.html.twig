{% extends "ABReservationZenithBundle::layout.html.twig" %}

{% block title %}ABReservationZenithBundle:Tarif:modifier{% endblock %}

{% block body %}
<h1>{{'modifier.tarif'|trans}}</h1>
{% if is_granted('ROLE_ADMIN') %}
<form action='' method="post" {{form_enctype(form)}}>
	 <table>
    	<tr><td>{{form_label(form.prix)}}</td><td>{{form_widget(form.prix)}}</td></tr>
    	<tr><td>{{form_label(form.numeroPlaceMin)}}</td><td>{{form_widget(form.numeroPlaceMin)}}</td></tr>
    	<tr><td>{{form_label(form.numeroPlaceMax)}}</td><td>{{form_widget(form.numeroPlaceMax)}}</td></tr>
    </table>    
	<div hidden="true"/>
	{{form_rest(form)}}
	<input type="submit" />
</form>
{% else %}
<h1> {{'privilege.addsppectacle'|trans }}</h1>
{% endif %}
{% endblock %}
