{% extends "ABReservationZenithBundle::layout.html.twig" %}

{% block title %}ABReservationZenithBundle:Seance:ajouter{% endblock %}

{% block body %}
<div class='well'>
	<h3>Ajouter un tarif</h3>
	<form action="{{path('ajouter_tarif')}}" method="post" {{form_enctype(form)}}>
		{{ form_errors(form) }}
		<table>
			<tr><td>{{form_label(form.prix) }}</td><td>{{form_widget(form.prix)}}</td></tr>
			<tr><td>{% trans %}intervalle.place.tarif{% endtrans %}</td><td>{{form_widget(form.numeroPlaceMin)}} Ã  {{form_widget(form.numeroPlaceMax)}}</td></tr>
		</table>
		<input type="submit" class='btn btn-primary'/>
	</form>
</div>
{% endblock %}
